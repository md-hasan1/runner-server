# Copy this file to `.env` and fill the values. Do NOT commit `.env`.

# App
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# Database (Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/dbname?schema=public"

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1d

# Stripe
STRIPE_SECRET_KEY=sk_live_xxx_or_sk_test_xxx
STRIPE_TEST_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Firebase (for FCM)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-client-email@firebase-adminsdk.iam.gserviceaccount.com
# If using a multiline private key, replace literal newlines with \n
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# SMTP (Nodemailer)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM="Support <support@example.com>"

# Cloudinary (if used)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# DigitalOcean Spaces (if used)
DO_SPACES_KEY=
DO_SPACES_SECRET=
DO_SPACES_REGION=
DO_SPACES_BUCKET=

# Optional: Sentry DSN
SENTRY_DSN=

# Any other service keys used by your deployment
# Example: MAPBOX_TOKEN=, GOOGLE_MAPS_API_KEY=

# Notes:
# - After editing, run your app locally using the `.env` file.
# - Never commit real secrets to git. Store production secrets in a secrets manager or GitHub Actions secrets.